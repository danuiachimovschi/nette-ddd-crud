{block content}

<h2>Edit User</h2>

{form editUserForm}
    <div class="mb-3">
        <label for="username">Username:</label>
        {input username class => "form-control", id => "username", value => $userItem->username}
    </div>

    <div class="mb-3">
        <label for="email">Email:</label>
        {input email class => "form-control", id => "email", value => $userItem->email}
    </div>

    <button type="submit" class="btn btn-primary">Edit User</button>
{/form}

